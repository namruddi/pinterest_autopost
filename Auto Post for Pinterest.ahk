#NoEnv  ; Отключает использование переменных среды
SendMode Input  ; Устанавливает режим отправки ввода

^!f::  ; Горячая клавиша Ctrl + Alt + F
{
    x1 := 1  ; Инициализация переменной x1 с начальным значением 1
    
    Loop, 9  ; Внешний цикл (повторяется 9 раз)
    {
        ; Блок перехода по элементам с помощью клавиш Tab и Space
        Send, {Tab}  ; Нажимаем Tab для перехода к следующему элементу
        Sleep, 400  ; Пауза 400 миллисекунд (увеличено в 2 раза)
        Send, {Space}  ; Нажимаем Space
        Sleep, 2000  ; Пауза 2 секунды (увеличено в 2 раза)
        
        ; Вложенный цикл для отправки 10 нажатий Tab
        Loop, 10
        {
            Send, {Tab}  ; Нажимаем Tab
        }
        Sleep, 2000  ; Пауза 2 секунды (увеличено в 2 раза)

        ; Вложенный цикл с переменной x1 для отправки нажатий вправо
        Loop, %x1%  ; Внутренний цикл, повторяет действия %x1% раз
        {
            Send, {right}  ; Нажимаем правую стрелку
        }
        Sleep, 200  ; Пауза 200 миллисекунд (увеличено в 2 раза)

        ; Отправляем левую стрелку
        Send, {left}  
        Sleep, 200  ; Пауза 200 миллисекунд (увеличено в 2 раза)

        ; Блок с удержанием клавиш Ctrl + Shift и последующими нажатиями правой стрелки
        Send, {Ctrl down}  ; Удерживаем Ctrl
        Send, {Shift down}  ; Удерживаем Shift
        Loop, 9  ; Цикл нажатия правой стрелки 9 раз
        {
            Send, {right}  ; Нажимаем правую стрелку
        }
        Send, {Ctrl up}  ; Отпускаем Ctrl
        Send, {Shift up}  ; Отпускаем Shift
        Sleep, 1000  ; Пауза 1 секунда (увеличено в 2 раза)

        ; Нажатие клавиши Enter
        Send, {Enter}  
        Sleep, 30000  ; Пауза 30 секунд (увеличено в 2 раза)

        ; Переход с помощью Tab и отправка Space
        Loop, 44  ; Повторяется 44 раза
        {
            Send, {Tab}  ; Нажимаем Tab
            Sleep, 200  ; Пауза 200 миллисекунд (увеличено в 2 раза)
        }
        Sleep, 400  ; Пауза 400 миллисекунд (увеличено в 2 раза)
        Send, {Space}  ; Нажимаем Space
        
        ; Отправка 2 нажатий Tab
        Loop, 2
        {
            Send, {Tab}  ; Нажимаем Tab
        }
        Sleep, 400  ; Пауза 400 миллисекунд (увеличено в 2 раза)
        Send, {Space}  ; Нажимаем Space
        Sleep, 400  ; Пауза 400 миллисекунд (увеличено в 2 раза)

        ; Отправка 2 нажатий Tab
        Loop, 2
        {
            Send, {Tab}  ; Нажимаем Tab
        }
        Sleep, 400  ; Пауза 400 миллисекунд (увеличено в 2 раза)

        ; Горячая клавиша Ctrl + Alt + S
        Send, ^!s  ; Нажимаем Ctrl + Alt + S
        Sleep, 6000  ; Пауза 6 секунд (увеличено в 2 раза)
        Send, {Space}  ; Нажимаем Space
        Sleep, 2000  ; Пауза 2 секунды (увеличено в 2 раза)
        
        ; Переход с помощью Tab и нажатие Space
        Send, {Tab}  
        Sleep, 400  ; Пауза 400 миллисекунд (увеличено в 2 раза)
        Send, {Space}  ; Нажимаем Space
        Sleep, 20000  ; Пауза 20 секунд (увеличено в 2 раза)

        ; Увеличиваем значение x1 для следующего цикла
        x1 += 10  ; Увеличиваем x1 на 10 после каждого полного выполнения цикла
    }
}
Return
